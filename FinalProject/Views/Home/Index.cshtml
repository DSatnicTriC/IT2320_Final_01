@model FinalProject.Models.HomeViewModel

<html>

<head>
    <link href="~/Styles/Home.css" rel="stylesheet" />
    <title>Final Project</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
</head>

<body class="specialFontCase">
    <script src="~/Scripts/jquery-2.1.1.min.js"></script>
    <script src="~/Scripts/jquery-ui.min.js"></script>
    <script src="~/Scripts/Home.js"></script>

    <div id="fullPage">
        <div>
            <p id="mainHeader">
                Welcome to Cuyahoga Community College Student Services Online
            </p>
            <p id="paragraphBelowMainHeader">
                Cuyahoga Community College recognizes student' right to access personal and academic records
                in accordance with the Family Educational Rights and Privacy Act of 1974 (FERPA) as
                amended by Public Law 930568
            </p>
        </div>

        @* There are different ways to swap out the content
            1) Store it and send it from the server - I did not do because we are not to modify the server files
            2) Store it and send it from JavaScript - I did not do because all markup formatting is lost - very hard to edit
            3) Have both contained in the markup but only show one - about as 'secure' as sending it from JS, but much cleaner*@
        <div class="content">
            <div id="loginPage">
                <div id="existingUsersContainer">
                    <p id="existingUsersHeader">Log in</p>
                    <p id="existingUsersInfo"> Already have an account with us? Returning users may log in by entering their site username and password </p>
                    <div id="existingUserLoginControls">
                        <div id="existingUserUserNameControls">
                            <label for="existingUserUserName">Username</label> <input type="text" id="existingUserUserName" class="userInput" />
                        </div>
                        <div class="errorMessageDisplay" id="existingUserUserNameMessage">
                        </div>
                        <div id="existingUserPasswordControls">
                            <label for="existingUserPassword">Password</label> <input type="text" id="existingUserPassword" class="userInput" />
                        </div>
                        <div class="errorMessageDisplay" id="existingUserPasswordMessage">
                        </div>
                        <div id="existingUserControls">
                            <button id="existingUserLogInButton">Log In</button>
                        </div>
                    </div>
                </div>
                <div id="newUsersContainer">
                    <p id="newUsersHeader">Create New Account</p>
                    <p id="newUsersInfo"> New users, please create a new account by providing us with some basic information </p>
                    <div id="newUserLoginControls">
                        <div id="newUserUserNameControls">
                            <label for="newUserUserName">Username</label> <input type="text" id="newUserUserName" class="userInput" />
                        </div>
                        <div class="errorMessageDisplay" id="newUserUserNameMessage">
                        </div>
                        <div id="newUserPasswordControls">
                            <label for="newUserPassword">Password</label> <input type="text" id="newUserPassword" class="userInput" />
                        </div>
                        <div class="errorMessageDisplay" id="newUserPasswordMessage">
                        </div>
                        <div id="newUserEmailControls">
                            <label for="newUserEmail">E-mail Address</label> <input type="text" id="newUserEmail" class="userInput" />
                        </div>
                        <div class="errorMessageDisplay" id="newUserEmailMessage">
                        </div>
                        <div id="newUserEmailRepeatControls">
                            <label for="newUserEmailRepeat">Repeat E-mail Address</label> <input type="text" id="newUserEmailRepeat" class="userInput" />
                        </div>
                        <div class="errorMessageDisplay" id="newUserEmailRepeatMessage">
                        </div>
                        <div id="newUserControls">
                            <button id="newUserCreateAccountButton">Create Account</button>
                        </div>
                    </div>
                </div>
            </div>
            <div id="accountInfoPage">
                <div id="existingValuePairsContainer">
                    <p id="accountNameLabel">Account Name</p>
                    <p id="accountName">achoo54323</p>
                    <div class="existingUserData">
                        <label for="existingUseremailadd">EMailAddress</label>
                        <input type="text" id="existingUseremailadd" class="userInput" value="a@a.com">
                        <input type="hidden" value="emailadd">
                        <button id="existingUseremailadd_Button">Update</button>
                    </div>
                    <div class="existingUserData">
                        <label for="existingUseremailadd2">EMailAddress</label>
                        <input type="text" id="existingUseremailadd2" class="userInput" value="a@a.com">
                        <input type="hidden" value="emailadd2">
                        <button id="existingUseremailadd2_Button">Update</button>
                    </div>
                </div>
                <div id="newValuePairsContainer">
                    <div class="existingUserNewData">
                        <div>
                            <label for="elementName">ElementName</label>
                            <input type="text" id="elementName" class="userInput">
                        </div>
                        <div class="errorMessageDisplay" id="elementNameMessage">
                        </div>
                        <div>
                            <label for="elementValue">ElementValue</label>
                            <input type="text" id="elementValue" class="userInput">
                        </div>
                        <div class="errorMessageDisplay" id="elementValueMessage">
                        </div>
                        <button id="existingUserNewData_AddButton">Add</button>
                    </div>
                </div>
            </div>
        </div>
        <footer>
            Cuyahoga Community College<br />
            700 Carnegie Avenue, Cleveland, Ohio 44115
        </footer>

    </div>
    <script>
        window.FinalProjectUrl_AddOrUpdateElement = '@Url.Action("AddOrUpdateElement", "Home")';
        window.FinalProjectUrl_CreateAccount = '@Url.Action("CreateAccount", "Home")';
        window.FinalProjectUrl_GetAccountInformation = '@Url.Action("GetAccountInformation", "Home")';
        window.FinalProjectUrl_Login = '@Url.Action("Login", "Home")';
    </script>
</body>
</html>